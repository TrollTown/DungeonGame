<AnchorPane onKeyPressed="#handleKeyPress" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
	<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
		<GridPane fx:id="squares" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" visible="true">
		   	<columnConstraints>
		    	<ColumnConstraints />
		   	</columnConstraints>
		   	<rowConstraints>
				<RowConstraints />
		    </rowConstraints>
		</GridPane>
		<FlowPane fx:id="flow" orientation="vertical" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" styleClass="flow" alignment="top_center" visible="false">
   			<Label text="Game Menu" styleClass="label"/>
   			<Button text="Back to Game" styleClass="button"/>
   			<Button text="Reset Progress" styleClass="button"/>
   			<Button text="Save Game" styleClass="button"/>
   			<Button text="Save and Quit to Title" styleClass="button"/>
		</FlowPane> 
	</StackPane>
	<stylesheets>
		<URL value="@pp/../menustyles.css" />
	</stylesheets>
</AnchorPane>
